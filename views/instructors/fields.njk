<div class="item">
    <div>Digite seu Nome</div>
        <input type="text" 
        name="name"
        placeholder="Nome do novo instructor" value='{{instructor.name}}'>
 </div>

<div class="item">
    <div>link da sua foto</div>
     <input type="url"
     name="avatar_URL" 
     placeholder= "https://" value='{{instructor.avatar_URL}}'>
   
</div>

<div class="item">
    <div>Data de Nascimento</div>
    <div>
     <input
      type="date" 
      name="birth" value='{{instructor.birth}}'>
    </div>
</div>

<div class="item">
    <div>Sexo</div>
    <div>
     <span><input type="radio" name="gender" value="Masculino" checked >-MASCULINO</span>
     <span><input type="radio" name="gender" value="Feminino"  >-FEMENINO</span>
    </div>
</div>

<div class="item">
    <div>Área de atuação </div>
         <input type="text"
          name="services" 
          placeholder="Separe os serviços por virgula." value='{{instructor.services}}'>
</div>